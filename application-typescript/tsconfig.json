{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
        "outDir": "./dt4h",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.spec.ts"]
}
