{
  "name": "fabric-app",
  "version": "1.0.0",
  "description": " app",
  "main": "app.js",
  "scripts": {
    "build_protos": "./application/build_proto_ts.sh && cp -r ./application/lib/protos ./application/dist",
    "build_ts": "tsc -p tsconfig.json",
    "init": "npm run build_ts && node app.js init",
    "db_listen": "node db_handler listen",
    "db_validate": "node db_handler.js val",
    "gen_mod": "npm i && npm audit fix",
    "doc": "jsdoc -c jsdoc.json",
    "lint": "eslint *.js --fix",
    "init_data": "node application/tests/fill_data.js",
    "ca_test": "mocha application/tests/CAServices_test.js --timeout 100000",
    "uc_test": "mocha application/tests/UserContract_test.js --timeout 100000",
    "dc_test": "mocha application/tests/DataContract_test.js --timeout 100000",
    "ac_test": "mocha application/tests/AgreementContract_test.js --timeout 100000",
    "contracts_test": "npm run ca_test && npm run uc_test && npm run dc_test && npm run ac_test",
    "db_test": "node db_handler.js validate",
    "test": "export NO_LOG=true && echo 0 > nextblock || echo 1 && npm run contracts_test",
    "clean": "rm -rf ./*.log ./nextblock"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "script"
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "no-console": "off",
      "curly": "error",
      "eqeqeq": "error",
      "no-throw-literal": "error",
      "no-var": "error",
      "dot-notation": "error",
      "no-trailing-spaces": "error",
      "no-use-before-define": "error",
      "no-useless-call": "error",
      "no-with": "error",
      "operator-linebreak": "error",
      "yoda": "error",
      "quote-props": [
        "error",
        "as-needed"
      ]
    }
  },
  "author": "Alexandros Tragkas",
  "dependencies": {
    "@fidm/x509": "^1.2.1",
    "@hyperledger/fabric-gateway": "^1.5.1",
    "chai": "^5.1.1",
    "chai-as-promised": "^8.0.0",
    "config": "^3.3.12",
    "dotenv": "^16.4.5",
    "dotenv-safe": "^9.1.0",
    "ecdsa-secp256r1": "^1.3.3",
    "fabric-ca-client": "^2.2.20",
    "fabric-contract-api": "^2.5.6",
    "fabric-network": "^2.2.20",
    "fabric-shim": "2.5.6",
    "google-protobuf": "^3.21.4",
    "ink-docstrap": "^1.3.2",
    "js-beautify": "^1.15.1",
    "js-yaml": "latest",
    "jsrsasign": "^11.1.0",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.1",
    "openssl-nodejs": "^1.0.5",
    "ts-proto": "^1.181.1",
    "winston": "^3.13.1"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "github.com/alxspectrum/fabric"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/elliptic": "^6.4.18",
    "@types/google-protobuf": "^3.15.12",
    "@types/js-yaml": "^4.0.9",
    "@types/jsrsasign": "^10.5.14",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.11",
    "async-mutex": "^0.5.0",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.12.4",
    "mocha": "^10.7.0",
    "mocha-steps": "^1.3.0",
    "protoc-gen-ts": "^0.8.7",
    "typescript": "^5.5.4"
  }
}
