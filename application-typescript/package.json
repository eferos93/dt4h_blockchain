{
  "name": "fabric-app",
  "version": "1.0.0",
  "description": " app",
  "main": "app.js",
  "scripts": {
    "build_protos": "./application/build_proto_ts.sh && cp -r ./application/lib/protos ./application/dist",
    "build_ts": "tsc -p tsconfig.json",
    "init": "npm run build_ts && node app.js init",
    "db_listen": "node db_handler listen",
    "db_validate": "node db_handler.js val",
    "gen_mod": "npm i && npm audit fix",
    "doc": "jsdoc -c jsdoc.json",
    "lint": "eslint *.js --fix",
    "init_data": "node application/tests/fill_data.js",
    "ca_test": "mocha application/tests/CAServices_test.js --timeout 100000",
    "uc_test": "mocha application/tests/UserContract_test.js --timeout 100000",
    "dc_test": "mocha application/tests/DataContract_test.js --timeout 100000",
    "ag_test": "mocha application/tests/AgreementContract_test.js --timeout 100000",
    "contracts_test": "npm run ca_test && npm run uc_test && npm run init_data && npm run dc_test && npm run ag_test",
    "db_test": "node db_handler.js test",
    "test": "export NO_LOG=true && rm nextblock || echo 1 && node db_handler.js drop && npm run init && npm run contracts_test && npm run db_test",
    "clean": "rm -rf ./*.log ./nextblock"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "script"
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "no-console": "off",
      "curly": "error",
      "eqeqeq": "error",
      "no-throw-literal": "error",
      "no-var": "error",
      "dot-notation": "error",
      "no-trailing-spaces": "error",
      "no-use-before-define": "error",
      "no-useless-call": "error",
      "no-with": "error",
      "operator-linebreak": "error",
      "yoda": "error",
      "quote-props": [
        "error",
        "as-needed"
      ]
    }
  },
  "author": "Alexandros Tragkas",
  "dependencies": {
    "@fidm/x509": "^1.2.1",
    "@hyperledger/fabric-gateway": "^1.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "config": "^3.3.4",
    "dotenv": "^8.6.0",
    "dotenv-safe": "^8.2.0",
    "ecdsa-secp256r1": "^1.3.3",
    "fabric-ca-client": "^2.2.11",
    "fabric-contract-api": "^2.4.1",
    "fabric-gateway": "^0.1.0-dev.20211029.6",
    "fabric-network": "^2.2.11",
    "fabric-shim": "2.2.1",
    "google-protobuf": "^3.19.3",
    "ink-docstrap": "^0.5.4",
    "js-beautify": "^1.13.0",
    "js-yaml": "latest",
    "jsrsasign": "^10.1.13",
    "mongodb": "^4.0.1",
    "mongoose": "^7.0.2",
    "openssl-nodejs": "^1.0.5",
    "ts-proto": "^1.100.1",
    "winston": "^3.10.0"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "github.com/alxspectrum/fabric"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.0",
    "@types/elliptic": "^6.4.14",
    "@types/google-protobuf": "^3.15.5",
    "@types/js-yaml": "^4.0.5",
    "@types/jsrsasign": "^9.0.3",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.10",
    "async-mutex": "^0.2.6",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "grpc_tools_node_protoc_ts": "^5.3.2",
    "grpc-tools": "^1.11.2",
    "mocha": "^8.3.1",
    "mocha-steps": "^1.3.0",
    "protoc-gen-ts": "^0.8.1",
    "typescript": "^5.0.2"
  }
}
